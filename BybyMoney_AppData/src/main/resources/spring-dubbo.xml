<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--使用Dubbo消费服务-->
    <!--1、设置名称-->
    <dubbo:application name="usercolumn"></dubbo:application>
    <!--2、设置注册中心-->
    <dubbo:registry protocol="zookeeper" address="47.99.220.57:2181"></dubbo:registry>
    <!--3、设置Dubbo的协议-->
    <dubbo:protocol name="dubbo" port="20881"></dubbo:protocol>
    <!--4、设置需要发布的服务-->
    <dubbo:reference interface="com.qfedu.byby.service.UserService" timeout="2000" id="userProvider" retries="0"></dubbo:reference>
</beans>